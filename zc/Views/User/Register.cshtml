@model zc.Models.ViewModels.UserRegisterModel

@{
    ViewBag.Title = "会员注册";
}

@section style {
    <style>
        .validation-summary-errors {
            color: red;
        }
    </style>
}
<header class="mui-bar mui-bar-nav">
    <h1 class="mui-title">@ViewBag.Title</h1>
</header>
<div class="mui-content">
    <form class="mui-input-group" method="post">
        <div class="mui-input-row">
            <label>用户名称</label>
            @Html.TextBoxFor(model => model.UserName, new { @class = "mui-input-clear", placeholder = "真实姓名" })
            @*<input type="text" name="UserName" class="mui-input-clear" placeholder="真实姓名">*@
        </div>
        <div class="mui-input-row">
            <label>手机号码</label>
            @Html.TextBoxFor(model => model.UserPhone, new { @class = "mui-input-clear", placeholder = "手机号码" })
            @*<input type="text" name="UserPhone" class="mui-input-clear" placeholder="手机号码">*@
        </div>
        <div class="mui-input-row">
            <label>身份证号</label>
            @Html.TextBoxFor(model => model.IdNumber, new { @class = "mui-input-clear", placeholder = "身份证号码" })
            <input type="text" name="IdNumber" class="mui-input-clear" placeholder="身份证号码">
        </div>
        <div class="mui-input-row">
            <label>推荐码</label>
            @Html.TextBoxFor(model => model.ReferrerUserCode, new { @class = "mui-input-clear", placeholder = "推荐人编码" })
            @*<input type="text" name="ReferrerId" class="mui-input-clear" placeholder="推荐人编码">*@
        </div>
        <div class="mui-input-row mui-checkbox mui-left">
            <label>我已阅读并接受<a href="#" style="text-decoration: underline;">注册协议</a></label>
            <input name="AgreeRegisterProtocal" type="checkbox" value="true" checked>
        </div>
        <button type="submit" class="mui-btn mui-btn-primary mui-btn-block">注册</button>
        <div>
            @Html.ValidationSummary()
        </div>
    </form>
</div>

