
@{
    ViewBag.Title = "修改密码";
}
<header class="mui-bar mui-bar-nav">
    <a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
    <h1 class="mui-title">@ViewBag.Title</h1>
    <a class="mui-btn mui-btn-red mui-pull-right" href="/User/Center">首页</a>
</header>
<div class="mui-content">
    <form id="loginPwdForm" class="mui-input-group" method="post" action="/User/SaveLoginPwd">
        <h5 class="section-title">登录密码</h5>
        <div class="mui-input-row">
            <label>登录密码</label>
            <input type="password" id="loginPwd" name="loginPwd" placeholder="登录密码" class="mui-input-password mui-input-clear" />
        </div>
        <div class="mui-content-padded">
            <button type="button" onclick="saveLoginPwd()" class="mui-btn mui-btn-primary btn-block">保存</button>
        </div>
    </form>
    <form id="secondPwdForm" class="mui-input-group" method="post" action="/User/SaveSecondPwd">
        <h5 class="section-title">二级密码</h5>
        <div class="mui-input-row">
            <label>二级密码</label>
            <input type="password" id="secondPwd" name="secondPwd" placeholder="二级密码" class="mui-input-password mui-input-clear" />
        </div>
        <div class="mui-content-padded">
            <button type="button" onclick="saveSecondPwd()" class="mui-btn mui-btn-primary btn-block">保存</button>
        </div>
    </form>
</div>

@section bottomScript{
    <script>
        function saveLoginPwd() {
            mui.ajax('@Url.Action("saveLoginPwd", "User")', {
                data: { "loginPwd": $("#loginPwd").val() },
                dataType: 'json',//服务器返回json格式数据
                type: 'post',//HTTP请求类型
                success: function (result) {
                    mui.alert(result.message, "提示");
                }
            });
        }
        function saveSecondPwd() {
            mui.ajax('@Url.Action("saveSecondPwd", "User")', {
                data: { "secondPwd": $("#secondPwd").val() },
                dataType: 'json',//服务器返回json格式数据
                type: 'post',//HTTP请求类型
                success: function (result) {
                    mui.alert(result.message, "提示");
                }
            });
        }
    </script>
}



