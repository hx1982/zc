
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/plug-in/easyui/themes/bootstrap/easyui.css">
    <link rel="stylesheet" type="text/css" href="~/plug-in/easyui/themes/icon.css">
    <link rel="stylesheet" type="text/css" href="~/Content/GlobalStyle.css">
    <script type="text/javascript" src="~/Scripts/jquery-1.11.3.min.js"></script>
    <script type="text/javascript" src="~/plug-in/easyui/jquery.easyui.min.js"></script>
</head>
<body>
    <div class="div-center">
        <div class="easyui-panel" title="Login" style="width:100%;max-width:400px;padding:30px 60px;">
            <form id="ff" method="post">
                <div style="margin-bottom:15px">
                    <input class="easyui-textbox" name="loginName" placeholder="员工编号/电话号码" style="width:100%" data-options="label:'登录名:',required:true">
                </div>
                <div style="margin-bottom:15px">
                    <input class="easyui-textbox" name="loginPwd" type="password" style="width:100%" data-options="label:'登录密码:',required:true">
                </div>
            </form>
            <div style="text-align:center;padding:5px 0">
                <a href="javascript:void(0)" class="easyui-linkbutton" onclick="submitForm()" style="width:80px">登录</a>
                <a href="javascript:void(0)" class="easyui-linkbutton" onclick="clearForm()" style="width:80px">清空</a>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript">
    function clearForm() {
        $('#ff').form('clear');
    }
    function submitForm() {
        if ($('#ff').form('validate')) {
            $('#ff').submit();
        }
    }
</script>
